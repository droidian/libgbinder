#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

LIBDIR=usr/lib/$(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

override_dh_auto_build:
	dh_auto_build -- LIBDIR=$(LIBDIR) debug pkgconfig debian/libgbinder.install debian/libgbinder-dev.install
	dh_auto_build -- -C test/binder-bridge debug
	dh_auto_build -- -C test/binder-call debug
	dh_auto_build -- -C test/binder-list debug
	dh_auto_build -- -C test/binder-ping debug

override_dh_auto_install:
	dh_auto_install -- LIBDIR=$(LIBDIR) install-dev
	dh_auto_install -- -C test/binder-bridge
	dh_auto_install -- -C test/binder-call
	dh_auto_install -- -C test/binder-list
	dh_auto_install -- -C test/binder-ping

%:
	dh $@
